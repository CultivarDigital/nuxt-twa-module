{
  "name": "nuxt-twa-module",
  "version": "1.1.0",
  "description": "A module for NUXT for converting your PWA into an Android app using 'trusted web activities'",
  "main": "index.js",
  "scripts": {
    "test": "jest && codecov",
    "dev": "nuxt test/example",
    "release": "yarn test && standard-version && git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voorhoede-labs/nuxt-twa-module.git"
  },
  "author": "Sjoerd Beentjes <sjoerd@voorhoede.nl> (https://sjoerdbeentjes)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/voorhoede-labs/nuxt-twa-module/issues"
  },
  "homepage": "https://github.com/voorhoede-labs/nuxt-twa-module#readme",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "codecov": "^3.2.0",
    "consola": "^2.4.1",
    "eslint": "^5.14.1",
    "get-port": "^4.1.0",
    "handlebars": "^4.1.0",
    "jest": "^24.1.0",
    "jimp": "^0.6.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nuxt-edge": "^2.5.0-25842247.c8e17a77",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "rimraf": "^2.6.3",
    "standard-version": "^5.0.0",
    "tmp-promise": "^1.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/*js",
      "test/module.test.js",
      "index.js",
      "!test/helpers/*js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/helpers/"
    ]
  },
  "keywords": [
    "Nuxt",
    "TWA",
    "PWA",
    "Nuxt-module",
    "PWAPK",
    "Nuxt-js"
  ]
}
